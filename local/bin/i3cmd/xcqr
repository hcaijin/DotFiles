#!/usr/bin/env sh
# Must have wl-clipboard-git installed to show qrencode

if [ -n "$1" ]; then
  TEXT="$1"
else
  echo "$(wl-paste -l)" | grep -n 'text/plain' 2>&1 >/dev/null
  [ $? == 0 ] || exit
  TEXT=$(wl-paste)
fi

qrencode -o - -s 1 \
	"${TEXT}" |
	feh --zoom max \
		-F \
		--force-aliasing \
		--image-bg white \
		-
