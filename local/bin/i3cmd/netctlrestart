#!/bin/bash
# Restart netctl default network

ifinstalled netctl || exit

MYIPFILE=/tmp/myip.txt
MYPIPFILE=/tmp/myproxyip.txt

netlist=$(netctl list | grep '*' | awk '{print $NF}')

rm -rf $MYIPFILE
rm -rf $MYPIPFILE
for net in ${netlist}
do
  sudo -A netctl restart $net
  notify-send "Restarting ${net} network..."
done
