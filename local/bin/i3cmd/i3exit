#!/bin/bash
function lock(){
    swaylock -f -i $HOME/.wallpaper/300-Arch.png
}

case "$1" in
    lock)
        lockwin
        ;;
    logout)
        swaymsg exit
        ;;
    suspend)
        systemctl -i suspend
        ;;
    hibernate)
        systemctl hibernate -i
        ;;
    reboot)
        systemctl -i reboot
        ;;
    shutdown)
        systemctl -i poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
