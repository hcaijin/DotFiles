#!/usr/bin/env bash

server=$(which systemctl)

! type systemctl >/dev/null && server=$(which loginctl)

function pre_exit(){
  [ -f "$HOME/.config/mpd/pid" ] && mpd --kill
  pkill -U $UID -f "auto-change-bg"
  pkill -U $UID -f "$SWAYSOCK.wob"
}

case "$1" in
    lock)
        lockwin
        ;;
    logout)
        pre_exit
        sleep 1
        swaymsg exit
        ;;
    suspend)
        start-swayidle alway
        sleep 1
        ${server} -i suspend
        ;;
    hibernate)
        start-swayidle alway
        sleep 1
        ${server} -i hibernate
        ;;
    reboot)
        ${server} -i reboot
        ;;
    shutdown)
        ${server} -i poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
