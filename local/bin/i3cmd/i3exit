#!/usr/bin/env bash

function pre_exit(){
  [ -f "$HOME/.config/mpd/pid" ] && mpd --kill
  pkill -U $UID -f "auto-change-bg"
  pkill -U $UID -f "$SWAYSOCK.wob"
}

case "$1" in
    lock)
        lockwin
        ;;
    logout)
        pre_exit
        sleep 1
        swaymsg exit
        ;;
    suspend)
        start-swayidle alway
        sleep 1
        systemctl -i suspend
        ;;
    hibernate)
        start-swayidle alway
        sleep 1
        systemctl -i hibernate
        ;;
    reboot)
        systemctl -i reboot
        ;;
    shutdown)
        systemctl -i poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
