#!/usr/bin/env sh
location="$1"; [ -z "$location" ] || { location="$location+" && rm -f "$HOME/.local/share/weatherreport" ;}

getforecast() {
  echo $location
  echo "test"
  ping -q -c 1 1.1.1.1 >/dev/null || exit 1
  curl -s "wttr.in/$location" > "$HOME/.local/share/weatherreport" || exit 1 ;
}

showweather() {
  weather="$(sed '16q;d' "$HOME/.local/share/weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/☔ /g" | tr -d '\n')"
  weather+="$(sed '13q;d' "$HOME/.local/share/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " ❄️",$1 "°","🌞",$2 "°"}' ;)"
}

main() {
  stats="$(stat -c %y "$HOME/.local/share/weatherreport" 2>/dev/null | awk '{print $1}')"
  today="$(date '+%Y-%m-%d')"

  if [ $stats != $today ]
  then
    getforecast
    showweather
  else
    showweather
  fi
}

main

echo $weather
